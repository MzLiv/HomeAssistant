blueprint:
  name: Aqara H2 EU 4 Button Switch
  description: A blueprint to set up all actions on an Aqara H2 EU 4 Button Switch 
  domain: automation
  
  input:
    switch:
        name: Aqara H2 EU 4 Button Switch
        description: This device will be selected for control. 
        selector:
            device:
                domain: mqtt

triggers:
    device_id: !input switch
    type: action
    subtype: single_left_down
    trigger: device
